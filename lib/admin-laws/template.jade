#laws-wrapper
  .laws-admin
    .heading
      .circle
        i.icon-paper
      h1= t('admin-laws.list.title')
    .row
      .col-md-offset-2.col-md-8
        .input-group.input-group-lg
          span.input-group-addon
            i.glyphicon.glyphicon-search
          input.form-control.input-lg.search(type='text', placeholder='#{t("dashboard.search.placeholder")}', autofocus)

    ul.list
      - each law in laws
        li(data-id=law.id)
          a(href="/admin/laws/" + law.id)
            span.law-id=law.tag.name
            - if (law.lawId)
              | #{' - '}
              span.law-id=law.lawId
            - if(law.mediaTitle)
              | #{' - '}
              span.law-title=law.mediaTitle
